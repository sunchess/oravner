<% if @page %>
  <% parent = if @page.children.any? 
                @page
              elsif @page.parent 
                @page.parent
              else 
                @page 
              end
            %>
<% end %>
<% if parent %>
  <% if parent.custom_title =~ /menu/ %>
    <% parent = @page %>
    <% menu = true %>
  <% end %>
  <div class="col_1"> <div class="txt_1"><%= parent.title %></div></div>
   <% unless menu %>
    <% parent.children.each do | menu_branch | -%>
      <div class="bord_5" align="center"> <%= link_to menu_branch.title, menu_branch.url %> </div>
    <% end -%>
  <% else %>
    <div class="pad_1" > <%= parent[:side_body] %> </div>
  <% end %>
<% end %>
